extends base.pug
 

block content 
    h4 Update Video
    form(method="POST")
        input(name="title" placeholder="Video Title", value=video.title, required)
        input(name="description", type='text', required, placeholder="Description", minlength=20, value=video.description)
        input(name="hashtags", type='text', required, placeholder="Hashtags, Separated by comma.", value=video.hashtags.join())
        input(type="submit", value = "save") 